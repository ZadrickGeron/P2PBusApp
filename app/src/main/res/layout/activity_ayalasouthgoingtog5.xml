                    android:gravity="center_vertical"
                    android:text="  6 AM - 9:30 AM                                                  30 Minutes" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="428dp"
                    android:layout_height="25dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center_vertical"
                    android:text="  10 AM - 5 PM                                                      1 Hour" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="428dp"
                    android:layout_height="25dp"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="  5:30 PM - 8 PM                                                   30 Minutes" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Greenbelt 5 to Ayala Malls South Park - from 7 AM until 9 PM"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="428dp"
                    android:layout_height="25dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center_vertical"
                    android:text="  Departure Times                                                Every"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="428dp"
                    android:layout_height="25dp"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="  7 AM - 9:30 AM	                                                30 Minutes" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="428dp"
                    android:layout_height="25dp"
                    android:background="@android:color/darker_gray"
                    android:gravity="center_vertical"
                    android:text="  10 AM - 5 PM                                                      1 Hour" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="428dp"
                    android:layout_height="25dp"
                    android:background="@android:color/background_light"
                    android:gravity="center_vertical"
                    android:text="  5:30 PM - 9 PM                                                   30 Minutes" />


                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fare"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Standard: P100"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:text="Senior Citizen/PWD/Pregnant Woman: P64"
                    android:textSize="13sp" />

            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>